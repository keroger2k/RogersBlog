=content_for :title, "Posts"

%h1 Posts

%table.posts-table
  %tbody
    -@posts.each do |post|
      %tr
        %td.date
          %p
            =post.created_at.strftime("%d %B, %Y")
        %td.title
          =link_to(post.title, post_path(post))
        %td.summary
          %p
            =raw(truncate(post.body, :length => 220))
        %td.info
          Comment Count
